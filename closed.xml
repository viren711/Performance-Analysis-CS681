<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/share/tsung/tsung-1.0.dtd">

<tsung loglevel="notice" version="1.0">

  <!-- Where Tsung runs -->
  <clients>
    <client host="localhost" maxusers="100"/>
  </clients>

  <!-- Your Apache web server -->
  <servers>
    <server host="10.51.5.140" port="80" type="tcp"/>
  </servers>

  <!-- Closed workload definition -->
  <load duration="300" unit="second">
    <arrivalphase phase="1" duration="300" unit="second">
      <!-- Total users in the system -->
      <users maxnumber="20" arrivalrate="5" unit="second"/>
    </arrivalphase>
  </load>

  <sessions>
  <session probability="100" name="webtest" type="ts_http">

    <for from="1" to="1000000" var="i">

      <transaction name="request">
        <request>
          <http url="/test.php" version="1.1"/>
        </request>
      </transaction>

      <thinktime value="6"/>

    </for>

  </session>
</sessions>




