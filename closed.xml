<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/share/tsung/tsung-1.0.dtd">

<tsung loglevel="notice" version="1.0">

  <!-- Load generator location -->
  <clients>
    <client host="localhost" maxusers="200"/>
  </clients>

  <!-- Web server (Windows machine) -->
  <servers>
    <server host="10.51.29.70" port="80" type="tcp"/>
  </servers>

  <!-- Long duration to guarantee steady state -->
  <load duration="600" unit="second">
    <arrivalphase phase="1" duration="600" unit="second">

      <!-- Moderate population -->
      <users maxnumber="30" arrivalrate="30" unit="second"/>

    </arrivalphase>
  </load>

  <!-- Closed user behavior -->
  <sessions>
    <session probability="100" name="closed_users" type="ts_http">

      <!-- Infinite circulation -->
      <for from="1" to="1000000000" var="i">

        <transaction name="http_request">
          <request>
            <http url="/test.php" version="1.1"/>
          </request>
        </transaction>

        <!-- Non-zero think time -->
        <thinktime value="8"/>

      </for>

    </session>
  </sessions>

</tsung>